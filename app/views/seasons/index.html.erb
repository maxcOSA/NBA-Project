        Year: "<%= player.years %>", 
        Draft_Pick: "<%= player.draftpick %>", 
        Position: "<%= player.position %>",
        GP: "<%= player.GP %>", 
        MPG: "<%= player.MPG %>", 
        PPG: "<%= player.PPG %>", 
        RPG: "<%= player.RPG %>", 
        APG: "<%= player.APG %>", 
        BPG: "<%= player.BPG %>", 
        SPG: "<%= player.SPG %>",
        FGP: "<%= player.fgp %>", 
        TPP: "<%= player.tpp %>", 
        FTP: "<%= player.ftp %>", 
