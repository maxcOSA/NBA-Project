<h1> Finals History</h1>

<head>
<meta name="viewport" content="width=device-width, initial-scale=1">
<style>

table, th, td {
  border: 1px solid black;
}

th, td {
  padding: 10px;
}
</style>
</head>


<table style="margin-top:1px; width:70%">
  <thead>
    <tr>
      <th>Year</th>
      <th>Winner</th>
      <th>Loser</th>
      <th>Finals MVP</th>
      <th>Games</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @finals.each do |final| %>
        <tr>
          <td><%=link_to final.year, final%></td> 
          <td><%=final.winner%></td>
          <td><%=final.loser%></td>
          <td><%=final.MVP%></td>
          <td><%=final.games%></td>
          <td><%= link_to 'Edit', edit_final_path(final) %></td>
        </tr>
    <%end%>
  </tbody>
</table>

<div><%= link_to 'Create Finals', new_final_path %></div>
<p id="notice"><%= notice %></p>